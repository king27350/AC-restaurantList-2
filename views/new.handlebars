<form class="mx-auto form-style" action="/restaurants" method="POST">
  <fieldset id="input-new">
    <legend>Exmaple</legend>
    <label for="name">Name:</label>
    <input type="text" name="name" required placeholder="張小姐陽春麵"><br />

    <label for="name_en">Eng Name:</label>
    <input type="text" name="name_en" placeholder="Kathy Store"><br />

    <label for="category">Category:</label>
    <input type="text" name="category" placeholder="中式料理"><br />

    <label for="image">Image:</label>
    <input type="text" name="image"><br />

    <label for="location">Location:</label>
    <input type="text" name="location" placeholder="台北市信義區"><br />

    <label for="phone">Phone:</label>
    <input id="telNo" name="telNo" type="tel" size="12" placeholder="0933-222-222"><br />

    <label for="google_map">Google map:</label>
    <input type="text" name="google_map" placeholder="www.google.com"><br />

    <label for="rating">Rating:</label>
    <input type="number" name="rating" min="0" max="5" placeholder=" 0~5"><br />

    <label for="description">Description:</label>
    <input type="text" name="description"><br />
    <button class="btn btn-dark" type="submit">Create</button>
    <button class="btn btn-dark" type="reset" value="Reset">Reset</button>
  </fieldset>
</form>