<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/restaurants/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="{{ keyword }}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
            <div class="dropdown btn-sort">
              <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink"
                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Sort
              </a>
              <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                <button class="dropdown-item" name="sort" value="asc">A-Z</button>
                <button class="dropdown-item" name="sort" value="desc">Z-A</button>
                <button class="dropdown-item" name="sort" value="-1">Rate Higher</button>
                <button class="dropdown-item" name="sort" value="1">Rate Lower</button>
              </div>
            </div>

          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">
        {{#each restaurants}}
        <a href="/restaurants/{{ this.id }}" class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top" src="{{ this.image }}" alt="{{ this.name }}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{ this.name }}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{ this.category }}
              </div>

              <span class="badge badge-pill badge-danger font-weight-normal">
                {{ this.rating }}
                <i class="fas fa-star fa-xs"></i>
              </span>
              <a href="/restaurants/{{this.id}}/edit">Edit</a>
              <a href="/restaurants/{{this.id}}">Detail</a>
              <form action="/restaurants/{{this.id}}/delete?_method=DELETE" method="POST" style="display: inline;">
                <button class="btn btn-link"><i class="far fa-trash-alt"></i></button>
              </form>
              <a class="nav-item" data-toggle="modal" data-target="#exampleModal"><i
                  class="far fa-money-bill-alt"></i></a>
            </div>
          </div>
        </a>
        {{/each}}
      </div>
    </div>
  </div>
</div>


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Today's Discount</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <img class="card-img-top" src="{{ randomRestaurant.image }}" alt="{{ randomRestaurant.name }}">
        <h5 class="text-center">限時特價：{{randomRestaurant.name}} 餐廳 9折優惠！！</h5>
        <h6 class="text-center">優惠碼：{{coupon}}</h6>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>